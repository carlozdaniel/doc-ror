<!DOCTYPE html>
<html>
  <head>

    <title>
    <% if content_for?(:title) %>
      <%= yield :title %>
    <% else %>
      Bienvenido a frikr
    <% end %>>
    </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section>
      <nav>
        <%= link_to 'Inicio', welcome_home_path %>
        <%= link_to 'listado de foto', photos_index_path %>
        <% if user_signed_in? %>
          <%= link_to 'mis fotos', my_photos_path %>
          <%= link_to 'crear foto', photo_new_path %>
          <%= link_to 'salir', destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to 'entrar', new_user_session_path %>
        <% end %>

      </nav>
    </section>

    <hr>
 
    <section>
      <p class="notice"><%= notice %> </p>
      <p class="alert"><%= alert %> </p>
      <%= yield %>
    </section>

    <hr>

    <section>
      <small>taller inc ~copy; Todos los derechos reservados</small>
    </section>
  </body>
</html>
